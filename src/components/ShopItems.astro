---
  import {formatCurrency} from '../utils/currency';
  import {getShopItems} from '../services/api';
  const shopItems = await getShopItems();
---

<ul class="shop-items">
  {shopItems.map(item => (
      <article class="item">
        <img src={item.image.src} alt={item.image.alt}>
        <h2>{item.title}</h2>
        <p class="description">{item.description}</p>
        <p class="price">{formatCurrency(item.price)}</p>
        <p>TODO: add button cart</p>
      </article>
    ))
  }
</ul>

<style>

  .shop-items {
    display: flex;
    gap: 3rem 1rem;
    flex-wrap: wrap;
    justify-content: center;
    margin: 2rem 0;
    padding: 0;
  }

  .item {
    width: 250px;
  }

  .item img {
    aspect-ratio: 1;
    border-radius: 0.125rem;
    display: block;
    width: 100%;
  }

  .item h2 {
    font-size: 1.125rem;
    margin: 0.75rem 0 0;
  }

  .description {
    color: var(--color-gray-600);
  }

  .item p {
    margin: 0.25rem 0 0;
  }

  .price {
    color: var(--primary-pink);
    font-weight: bold;
  }

</style>
